/* pages/goodDetail/goodDetail.wxss */
.gd-detail-price {
  display: flex;
  padding: 0 35rpx 0 35rpx;
  justify-content: space-between;
  align-items: center;
}

.detail-price-left {
  color: var(--themeColor);
}

.detail-price-right {
  display: flex;
  align-items: center;
}

.price-right-share {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.price-right-share .iconfont {}

.price-right-share button {
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100%;
}

/* 收藏图标激活效果*/
.collect-active {
  color: #eb4450
}

.gd-detail-title {
  padding: 0 30rpx 0 30rpx;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail-content-title {
  font-size: 28rpx;
  margin-top: 67rpx;
  height: 40rpx;
  text-align: center;
}

.gd-detail-top {
  height: calc(100vh - 94rpx);
  overflow-y: scroll;
}

.gd-detail-bottom {
  height: 94rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}

.detail-bottom-contact {
  flex: 1;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail-bottom-contact .iconfont {}

.detail-bottom-contact button {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100%;
}

.bottom-contact-text {
  font-size: 20rpx;
  color: #434343;
}

.detail-bottom-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bottom-cart-text {
  font-size: 20rpx;
  color: #434343;
}

.detail-bottom-add {
  flex: 2;
  display: flex;
  justify-content: center;
}

.bottom-add-btn {
  height: 60rpx;
  width: 196rpx;
  font-size: 26rpx;
  background-color: #fcaa23;
  border-radius: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-bottom-buy {
  flex: 2;
  display: flex;
  justify-content: center;
}

.bottom-buy-btn {
  height: 60rpx;
  width: 196rpx;
  font-size: 26rpx;
  background-color: #ea4350;
  border-radius: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}