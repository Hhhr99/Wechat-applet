/* pages/goodDetail/goodDetail.wxss */
.gd-detail-price {
  display: flex;
  padding: 0 35rpx 0 35rpx;
  justify-content: space-between;
  align-items: center;
}

.detail-price-left {
  color: var(--themeColor);
}

.detail-price-right {
  display: flex;
  align-items: center;
}

.price-right-share {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.price-right-share .iconfont {}

.price-right-share button {
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100%;
}

/* 收藏图标激活效果*/
.collect-active {
  color: #eb4450
}

.gd-detail-title {
  padding: 0 30rpx 0 30rpx;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail-content-title {
  font-size: 28rpx;
  margin-top: 67rpx;
  height: 40rpx;
  text-align: center;
}